@model CarteiraAtivos.Models.AtivoModel

<div class="modal-header">
  <h5 class="modal-title" id="modalLabel">Confirmar Exclus√£o</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
</div>

<div class="modal-body">
  Tem certeza que deseja excluir o ativo <strong>@Model.Ticker</strong>?
